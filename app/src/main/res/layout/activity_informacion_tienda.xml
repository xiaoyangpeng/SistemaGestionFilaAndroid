<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".incorporarremota.InformacionTiendaActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="182dp"
            android:layout_height="483dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Nombre" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Turno Actual" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Ultimo Turno" />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Tiempo estimada" />

            <Button
                android:id="@+id/incorAhoraTiendaInfo"
                android:layout_width="wrap_content"
                android:layout_height="7dp"
                android:layout_margin="20dp"
                android:layout_weight="1"
                android:onClick="incorporar"
                android:text="Incorporar ahora" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="463dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nombreTiendaInfo"
                android:layout_width="match_parent"
                android:layout_height="92dp"
                android:gravity="center"
                android:text="TextView" />

            <TextView
                android:id="@+id/turnoActualTiendaInfo"
                android:layout_width="match_parent"
                android:layout_height="86dp"
                android:gravity="center"
                android:text="TextView" />

            <TextView
                android:id="@+id/ultimoTurnoTiendaInfo"
                android:layout_width="match_parent"
                android:layout_height="96dp"
                android:gravity="center"
                android:text="TextView" />

            <TextView
                android:id="@+id/tiempoEstimaTiendaInfo"
                android:layout_width="match_parent"
                android:layout_height="84dp"
                android:gravity="center"
                android:text="TextView" />

            <Button
                android:id="@+id/incorMiHoraTiendaInfo"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_margin="20dp"
                android:layout_weight="1"
                android:onClick="EligeTiempo"
                android:padding="20dp"
                android:text="Elijo mi tiempo" />

        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>