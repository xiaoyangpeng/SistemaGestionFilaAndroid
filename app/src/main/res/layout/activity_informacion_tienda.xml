<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".informaciontienda.InformacionTiendaActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/nombreTiendaInfo"
            android:layout_width="match_parent"
            android:layout_height="92dp"
            android:gravity="center"
            android:text="TextView" />

        <TextView
            android:id="@+id/turnoActualTiendaInfo"
            android:layout_width="match_parent"
            android:layout_height="86dp"
            android:gravity="center"
            android:text="TextView" />

        <TextView
            android:id="@+id/ultimoTurnoTiendaInfo"
            android:layout_width="match_parent"
            android:layout_height="96dp"
            android:gravity="center"
            android:text="TextView" />

        <TextView
            android:id="@+id/tiempoEstimaTiendaInfo"
            android:layout_width="match_parent"
            android:layout_height="84dp"
            android:gravity="center"
            android:text="TextView" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/incorAhoraTiendaInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Incorporar ahora" />

            <Button
                android:id="@+id/incorMiHoraTiendaInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="EligeTiempo"
                android:text="Elijo mi tiempo" />

        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>