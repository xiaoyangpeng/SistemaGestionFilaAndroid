<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".modificardato.ModificaActivity">

    <LinearLayout
        android:id="@+id/linearLayout41"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/emailcuenta"
            android:layout_width="334dp"
            android:layout_height="49dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/personalizado_edittext_background"
            android:ems="10"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:paddingLeft="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView" />

        <EditText
            android:id="@+id/nombrecuenta"
            android:layout_width="334dp"
            android:layout_height="49dp"
            android:layout_marginTop="28dp"
            android:background="@drawable/personalizado_edittext_background"
            android:ems="10"
            android:hint="@string/nombre"
            android:paddingLeft="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/usuario" />

        <LinearLayout
            android:layout_width="334dp"
            android:layout_height="49dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView61"
                android:layout_width="150dp"
                android:layout_height="49dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/sexo"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/sexocuenta"
                android:layout_width="180dp"
                android:layout_height="49dp"
                android:background="@drawable/personalizado_edittext_background"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:text="null"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="334dp"
            android:layout_height="47dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView55"
                android:layout_width="122dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/telefono"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/telefonocuenta"
                android:layout_width="269dp"
                android:layout_height="match_parent"
                android:background="@drawable/personalizado_edittext_background"
                android:gravity="center"
                android:hint="Null"
                android:inputType="phone"
                android:paddingLeft="10dp"
                android:textSize="20sp" />

        </LinearLayout>

        <Button
            android:id="@+id/botoncuenta"
            android:layout_width="248dp"
            android:layout_height="73dp"

            android:layout_marginTop="50dp"
            android:layout_marginBottom="112dp"
            android:background="@drawable/personalizado_boton_login"
            android:onClick="modificar"
            android:text="Aceptar"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="40dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/registararPrinciapl"
            app:layout_constraintVertical_bias="0.239" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>