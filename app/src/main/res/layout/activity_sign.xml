<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/viewSign"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".sign.SignActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

        <ProgressBar
            android:id="@+id/progressBarSign"
            style="?android:attr/progressBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="invisible" />

        <EditText
            android:id="@+id/emailSign"
            android:layout_width="334dp"
            android:layout_height="49dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/personalizado_edittext_background"
            android:ems="10"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:paddingLeft="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView" />

        <LinearLayout
            android:layout_width="334dp"
            android:layout_height="49dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/contrasenaSign"
                android:layout_width="279dp"
                android:layout_height="49dp"
                android:background="@drawable/personalizado_edittext_background"
                android:ems="10"
                android:hint="Password"
                android:inputType="textPassword"
                android:paddingLeft="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.495"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/usuario" />

            <ImageView
                android:id="@+id/imageContrasenaSign"
                android:layout_width="wrap_content"
                android:layout_height="49dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/cerra_ojo" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="334dp"
            android:layout_height="49dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/contrasenaRepiteSign"
                android:layout_width="279dp"
                android:layout_height="49dp"
                android:background="@drawable/personalizado_edittext_background"
                android:ems="10"
                android:hint="Repeat Password"
                android:inputType="textPassword"
                android:paddingLeft="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.495"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/usuario" />

            <ImageView
                android:id="@+id/imageContrasenaRepiteSign"
                android:layout_width="wrap_content"
                android:layout_height="49dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/cerra_ojo" />
        </LinearLayout>

        <EditText
            android:id="@+id/nombreSign"
            android:layout_width="334dp"
            android:layout_height="49dp"
            android:layout_marginTop="28dp"
            android:background="@drawable/personalizado_edittext_background"
            android:ems="10"
            android:hint="@string/nombre"
            android:paddingLeft="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/usuario" />

        <LinearLayout
            android:layout_width="334dp"
            android:layout_height="49dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="150dp"
                android:layout_height="49dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/sexo"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/sexo"
                android:layout_width="180dp"
                android:layout_height="49dp"
                android:background="@drawable/personalizado_edittext_background"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:text="null"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="334dp"
            android:layout_height="47dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="122dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/telefono"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/telefono"
                android:layout_width="269dp"
                android:layout_height="match_parent"
                android:background="@drawable/personalizado_edittext_background"
                android:gravity="center"
                android:hint="Null"
                android:inputType="phone"
                android:paddingLeft="10dp"
                android:textSize="20sp" />

        </LinearLayout>

        <Button
            android:id="@+id/botonSginUp"
            android:layout_width="248dp"
            android:layout_height="73dp"

            android:layout_marginTop="50dp"
            android:layout_marginBottom="112dp"
            android:background="@drawable/personalizado_boton_login"
            android:text="Sign up"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="40dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/registararPrinciapl"
            app:layout_constraintVertical_bias="0.239" />

    </LinearLayout>
</ScrollView>
