<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="189dp"
    android:layout_marginTop="10dp"
    android:orientation="vertical">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="189dp"
        android:background="@drawable/boder"
        tools:layout_conversion_absoluteHeight="151dp"
        tools:layout_conversion_absoluteWidth="410dp"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="5dp">


        <TableRow
            android:layout_width="364dp"
            android:layout_height="77dp"
            android:gravity="center">

            <TextView
                android:id="@+id/nomreMisProducto"
                android:layout_width="wrap_content"
                android:layout_height="41dp"
                android:gravity="center"
                android:text="TextView" />
        </TableRow>

        <TableRow
            android:layout_width="404dp"
            android:layout_height="52dp">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="84dp"
                android:layout_height="50dp"
                android:background="@drawable/boder"
                android:gravity="center"
                android:text="Precio"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/precioMisProducto"
                android:layout_width="326dp"
                android:layout_height="match_parent"
                android:background="@drawable/boder"
                android:gravity="center" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="67dp"
                android:layout_height="50dp"
                android:background="@drawable/boder"
                android:gravity="center"
                android:text="Cantidad"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/cantidadMisProducto"
                android:layout_width="282dp"
                android:layout_height="match_parent"
                android:background="@drawable/boder"
                android:gravity="center" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="48dp">

            <TextView
                android:id="@+id/textView14"
                android:layout_width="75dp"
                android:layout_height="50dp"
                android:background="@drawable/boder"
                android:gravity="center"
                android:text="Precio total" />

            <TextView
                android:id="@+id/ProductosPrecioTotal"
                android:layout_width="322dp"
                android:layout_height="match_parent"
                android:background="@drawable/boder"
                android:gravity="center" />
        </TableRow>


    </TableLayout>
</LinearLayout>